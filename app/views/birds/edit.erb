<% ## SHOW BY DATE RATHER THAN INDIVIDUAL BIRDS %>
<h1>Birds Banded on <%= @session[:date_string]%></h1>
<table>
<tr><th>Alpha Code</th><th>Species</th><th>Number Banded</th></tr>
<form action="/birds" method="POST">
<input id="hidden" type="hidden" name="_method" value="patch">
<% count = 0%>
<%@count_by_species.each do |species,value| %>
    <%count += 1%>
<tr>
    <td><input type="text" name="species<%=count%>[code]" value="<%=species.code%>"</td>
    <td><input type="text" name="species<%=count%>[name]" value="<%=species.name%>"</td>
    <td><input type="number" name="number_banded<%=count%>" value="<%=value%>"</td>
</tr>
<%end%>
</table>
<input type="submit" value="Submit Changes">
</form>
