<h1>Create Your Bander Account</h1>
<% if flash.has?(:message) %>
  <h3 style="color:red"><%= flash[:message] %><h3>
<% end %>
<form action='/banders' method='POST'>
<%if session[:temp]%>
  <h2>Name: <input type="text" name="bander[name]" value="<%=session[:temp][:entered_name]%>"></h2>
  <h2>Email: <input type="text" name="bander[email]" value="<%=session[:temp][:entered_email]%>"></h2>
<%else%>
  <h2>Name: <input type="text" name="bander[name]"></h2>
  <h2>Email: <input type="text" name="bander[email]"></h2>
<%end%>
<h2>Password: <input type="password" name="bander[password]"></h2>
<input type="submit" value="Register">
</form>

